---
import Layout from "../layouts/Layout.astro";

import { books } from "../data/books.js";
const { book } = Astro.params;

const info = books.find((data) => data.id === book);

if (!info) {
  return Astro.redirect("/404", 404);
}
---

<Layout title={`Libro ${info.title}`}>
  <main class="m-auto max-w-4xl" transition:name=`book ${info.id} box`>
    <header>
      <div class="grid grid-flow-col place-content-center max-h-40">
        <div class="grid place-content-center">
          <a href="/" type="button" class="text-white bg-black hover:bg-blue-950 focus:ring-0 focus:outline-none focus:ring-blue-950 font-medium rounded-full text-sm p-2.5 text-center inline-flex items-center me-2 dark:bg-black dark:hover:bg-blue-950 dark:focus:ring-blue-950 transform rotate-180">
            <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
            <span class="sr-only">Icon description</span>
          </a>
        </div>
        <h1 class="scale-50 font-black uppercase text-6xl md:text-8xl text-center py-8" transition:name="book-title">
          Lecturas <span class="block text-[36px] md:text-[58px]">interesantes</span>
        </h1>
      </div>
      
    </header>

    <div class="grid grid-cols-[384px_1fr] gap-x-12 mt-10">
      <div class="grid">
        <picture class="mb-8 w-full relative">
          <img class="apect-[390/500] h-full object-cover w-full rounded" src={info.img} alt={`Portada del libro {info.title}`} transition:name=`book ${info.id} img`/>
        </picture>

        <a href={info.img} class="text-white justify-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center me-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
            <svg class="w-3.5 h-3.5 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 21">
            <path d="M15 12a1 1 0 0 0 .962-.726l2-7A1 1 0 0 0 17 3H3.77L3.175.745A1 1 0 0 0 2.208 0H1a1 1 0 0 0 0 2h.438l.6 2.255v.019l2 7 .746 2.986A3 3 0 1 0 9 17a2.966 2.966 0 0 0-.184-1h2.368c-.118.32-.18.659-.184 1a3 3 0 1 0 3-3H6.78l-.5-2H15Z"/>
            </svg>
            Comprar ahora
        </a>
      </div>
      <div>
        <h1 class="text-6xl font-black mb-4">{info.title}</h1>

        <p class="text-lg">{info.summary}</p>

        <p><strong>Author:</strong> <span class="font-semibold text-gray-800">{info.author}</span></p>
      </div>
    </div>
  </main>
</Layout>
